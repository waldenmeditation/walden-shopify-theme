    <button class="space-builder__back" on:click="/goBack" aria-label="Back">Back</button>
    <div class="space-builder__grid-header">
      <h1>{{ section.settings.home_heading }}</h1>
      <p>{{ section.settings.home_subheading }}</p>
    </div>
    <div class="space-builder__grid-items space-builder__grid-items--few">
      {%- assign idx = 0 -%}
      {%- if home_1 != blank -%}
        <div class="space-builder__grid-card" on:click="/selectHome?index={{ idx }}">
          <div class="space-builder__grid-card-image">
            {%- if home_1.featured_image != blank -%}
              <img src="{{ home_1.featured_image | image_url: width: 600 }}" alt="{{ home_1.featured_image.alt | escape }}" width="600" height="{{ 600 | divided_by: home_1.featured_image.aspect_ratio | round }}" loading="lazy">
            {%- endif -%}
          </div>
          <div class="space-builder__grid-card-title">{{ home_1.title }}</div>
        </div>
        {%- assign idx = idx | plus: 1 -%}
      {%- endif -%}
      {%- if home_2 != blank -%}
        <div class="space-builder__grid-card" on:click="/selectHome?index={{ idx }}">
          <div class="space-builder__grid-card-image">
            {%- if home_2.featured_image != blank -%}
              <img src="{{ home_2.featured_image | image_url: width: 600 }}" alt="{{ home_2.featured_image.alt | escape }}" width="600" height="{{ 600 | divided_by: home_2.featured_image.aspect_ratio | round }}" loading="lazy">
            {%- endif -%}
          </div>
          <div class="space-builder__grid-card-title">{{ home_2.title }}</div>
        </div>
        {%- assign idx = idx | plus: 1 -%}
      {%- endif -%}
      {%- if home_3 != blank -%}
        <div class="space-builder__grid-card" on:click="/selectHome?index={{ idx }}">
          <div class="space-builder__grid-card-image">
            {%- if home_3.featured_image != blank -%}
              <img src="{{ home_3.featured_image | image_url: width: 600 }}" alt="{{ home_3.featured_image.alt | escape }}" width="600" height="{{ 600 | divided_by: home_3.featured_image.aspect_ratio | round }}" loading="lazy">
            {%- endif -%}
          </div>
          <div class="space-builder__grid-card-title">{{ home_3.title }}</div>
        </div>
        {%- assign idx = idx | plus: 1 -%}
      {%- endif -%}
      {%- if home_4 != blank -%}
        <div class="space-builder__grid-card" on:click="/selectHome?index={{ idx }}">
          <div class="space-builder__grid-card-image">
            {%- if home_4.featured_image != blank -%}
              <img src="{{ home_4.featured_image | image_url: width: 600 }}" alt="{{ home_4.featured_image.alt | escape }}" width="600" height="{{ 600 | divided_by: home_4.featured_image.aspect_ratio | round }}" loading="lazy">
            {%- endif -%}
          </div>
          <div class="space-builder__grid-card-title">{{ home_4.title }}</div>
        </div>
      {%- endif -%}
    </div>
  </div>

  {%- comment -%} Home Variant Grids {%- endcomment -%}
  {% render 'space-builder-variant-grid', product_resource: home_1, product_index: 0, description: '', ref_name: 'homeVariantGrid', click_method: 'selectHomeVariant' %}
  {% render 'space-builder-variant-grid', product_resource: home_2, product_index: 1, description: '', ref_name: 'homeVariantGrid', click_method: 'selectHomeVariant' %}
  {% render 'space-builder-variant-grid', product_resource: home_3, product_index: 2, description: '', ref_name: 'homeVariantGrid', click_method: 'selectHomeVariant' %}
  {% render 'space-builder-variant-grid', product_resource: home_4, product_index: 3, description: '', ref_name: 'homeVariantGrid', click_method: 'selectHomeVariant' %}

  {%- comment -%} Configurator (hidden initially) {%- endcomment -%}
  <div class="space-builder__configurator" ref="configurator" data-state="hidden">

    {%- comment -%} Left: Preview {%- endcomment -%}
    <div class="space-builder__preview">
      {%- if seat_1 != blank and seat_1.featured_image != blank -%}
        <img ref="previewImage[]" class="space-builder__preview-image" src="{{ seat_1.featured_image | image_url: width: 1200 }}" alt="{{ seat_1.featured_image.alt | escape }}" width="1200" height="{{ 1200 | divided_by: seat_1.featured_image.aspect_ratio | round }}" loading="lazy" hidden>
