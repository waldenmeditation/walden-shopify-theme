{% doc %}
  @prompt
    large clickable image with vertically centered text, adjustable alignment (left, center, right)
    
    should be a heading and subheading for text. the entire block should be a clickable link
    
    option for separate mobile text sizes and alignment, add image width display style (display full width, but keep height adjustable), add image display alignment option. whether I want the image to align to the right or left.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-clickable-image-{{ ai_gen_id }} {
    position: relative;
    display: block;
    width: 100%;
    margin: auto;
    max-width: {{ block.settings.max_width }}px;
    overflow: hidden;
    text-decoration: none;
  }

  .ai-clickable-image__wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.image_height }}px;
  }

  .ai-clickable-image__img-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    object-position: {{ block.settings.image_alignment }};
  }

  .ai-clickable-image__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-clickable-image__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-clickable-image__content-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: {{ block.settings.text_alignment }};
    padding: 40px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-clickable-image__heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 {{ block.settings.text_spacing }}px 0;
    line-height: 1.2;
  }

  .ai-clickable-image__subheading-{{ ai_gen_id }} {
    color: {{ block.settings.subheading_color }};
    font-size: {{ block.settings.subheading_size }}px;
    margin: 0;
    line-height: 1.4;
  }

  @media screen and (max-width: 749px) {
    .ai-clickable-image__wrapper-{{ ai_gen_id }} {
      height: {{ block.settings.mobile_image_height }}px;
    }

    .ai-clickable-image__img-{{ ai_gen_id }} {
      object-position: {{ block.settings.mobile_image_alignment }};
    }

    .ai-clickable-image__content-{{ ai_gen_id }} {
      align-items: {{ block.settings.mobile_text_alignment }};
      text-align: {{ block.settings.mobile_text_alignment }};
      padding: 20px;
    }

    .ai-clickable-image__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_heading_size }}px;
    }

    .ai-clickable-image__subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_subheading_size }}px;
    }
  }
{% endstyle %}

<a
  href="{{ block.settings.link }}"
  class="ai-clickable-image-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-clickable-image__wrapper-{{ ai_gen_id }}">
    {% if block.settings.image %}
      <img
        src="{{ block.settings.image | image_url: width: 2000 }}"
        alt="{{ block.settings.image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.image.width }}"
        height="{{ block.settings.image.height }}"
        class="ai-clickable-image__img-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-clickable-image__placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
      </div>
    {% endif %}

    <div class="ai-clickable-image__content-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="ai-clickable-image__heading-{{ ai_gen_id }}">
          {{ block.settings.heading }}
        </h2>
      {% endif %}

      {% if block.settings.subheading != blank %}
        <p class="ai-clickable-image__subheading-{{ ai_gen_id }}">
          {{ block.settings.subheading }}
        </p>
      {% endif %}
    </div>
  </div>
</a>

