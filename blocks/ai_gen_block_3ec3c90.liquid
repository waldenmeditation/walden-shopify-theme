{% doc %}
  @prompt
    center align two column section.
    
    each column has an image and a text field below it.
    
    a divider line is displayed.
    
    on mobile, they stack, with no divider line.
    
    provide separate settings for desktop and mobile., add a slider for image height. both mobile and desktop. separate for each column., actually, make the image width adjustable instead of the height
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-two-column-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-two-column-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-two-column-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: {{ block.settings.column_gap }}px;
    align-items: center;
  }

  .ai-two-column-divider-{{ ai_gen_id }} {
    width: 1px;
    height: {{ block.settings.divider_height }}px;
    background-color: {{ block.settings.divider_color }};
  }

  .ai-two-column-item-{{ ai_gen_id }} {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .ai-two-column-image-wrapper-{{ ai_gen_id }} {
    margin-bottom: {{ block.settings.image_text_spacing }}px;
  }

  .ai-two-column-image-wrapper-{{ ai_gen_id }}.ai-two-column-image-wrapper-1-{{ ai_gen_id }} {
    width: {{ block.settings.image_1_width }}%;
  }

  .ai-two-column-image-wrapper-{{ ai_gen_id }}.ai-two-column-image-wrapper-2-{{ ai_gen_id }} {
    width: {{ block.settings.image_2_width }}%;
  }

  .ai-two-column-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-two-column-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1 / 1;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-two-column-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-two-column-text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.5;
  }

  @media screen and (max-width: 749px) {
    .ai-two-column-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.mobile_column_gap }}px;
    }

    .ai-two-column-divider-{{ ai_gen_id }} {
      display: none;
    }

    .ai-two-column-{{ ai_gen_id }} {
      padding: {{ block.settings.mobile_padding_top }}px 0 {{ block.settings.mobile_padding_bottom }}px;
    }

    .ai-two-column-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_text_size }}px;
    }

    .ai-two-column-image-wrapper-{{ ai_gen_id }} {
      margin-bottom: {{ block.settings.mobile_image_text_spacing }}px;
    }

    .ai-two-column-image-wrapper-{{ ai_gen_id }}.ai-two-column-image-wrapper-1-{{ ai_gen_id }} {
      width: {{ block.settings.mobile_image_1_width }}%;
    }

    .ai-two-column-image-wrapper-{{ ai_gen_id }}.ai-two-column-image-wrapper-2-{{ ai_gen_id }} {
      width: {{ block.settings.mobile_image_2_width }}%;
    }
  }
{% endstyle %}

<div class="ai-two-column-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-two-column-container-{{ ai_gen_id }}">
    <div class="ai-two-column-grid-{{ ai_gen_id }}">
      <div class="ai-two-column-item-{{ ai_gen_id }}">
        <div class="ai-two-column-image-wrapper-{{ ai_gen_id }} ai-two-column-image-wrapper-1-{{ ai_gen_id }}">
          {% if block.settings.image_1 %}
            <img
              src="{{ block.settings.image_1 | image_url: width: 800 }}"
              alt="{{ block.settings.image_1.alt | escape }}"
              loading="lazy"
              width="{{ block.settings.image_1.width }}"
              height="{{ block.settings.image_1.height }}"
              class="ai-two-column-image-{{ ai_gen_id }}"
            >
          {% else %}
            <div class="ai-two-column-image-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          {% endif %}
        </div>
        {% if block.settings.text_1 != blank %}
          <div class="ai-two-column-text-{{ ai_gen_id }}">
            {{ block.settings.text_1 }}
          </div>
        {% endif %}
      </div>

      <div class="ai-two-column-divider-{{ ai_gen_id }}"></div>

      <div class="ai-two-column-item-{{ ai_gen_id }}">
        <div class="ai-two-column-image-wrapper-{{ ai_gen_id }} ai-two-column-image-wrapper-2-{{ ai_gen_id }}">
          {% if block.settings.image_2 %}
            <img
              src="{{ block.settings.image_2 | image_url: width: 800 }}"
              alt="{{ block.settings.image_2.alt | escape }}"
              loading="lazy"
              width="{{ block.settings.image_2.width }}"
              height="{{ block.settings.image_2.height }}"
              class="ai-two-column-image-{{ ai_gen_id }}"
            >
          {% else %}
            <div class="ai-two-column-image-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          {% endif %}
        </div>
        {% if block.settings.text_2 != blank %}
          <div class="ai-two-column-text-{{ ai_gen_id }}">
            {{ block.settings.text_2 }}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

