{% doc %}
  @prompt
    simple line divider. customizable color and max/min width.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-line-divider-{{ ai_gen_id }} {
    width: 100%;
    display: flex;
    justify-content: center;
    padding: {{ block.settings.spacing_top }}px 0 {{ block.settings.spacing_bottom }}px;
  }

  .ai-line-divider__line-{{ ai_gen_id }} {
    width: 100%;
    max-width: {{ block.settings.max_width }}px;
    height: {{ block.settings.line_thickness }}px;
    background-color: {{ block.settings.line_color }};
    border: none;
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-line-divider__line-{{ ai_gen_id }} {
      max-width: {{ block.settings.max_width_mobile }}px;
    }
  }
{% endstyle %}

<div class="ai-line-divider-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <hr class="ai-line-divider__line-{{ ai_gen_id }}">
</div>

{% schema %}
{
  "name": "Line divider",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Line style"
    },
    {
      "type": "color",
      "id": "line_color",
      "label": "Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "line_thickness",
      "min": 1,
      "max": 10,
      "step": 1,
      "unit": "px",
      "label": "Thickness",
      "default": 1
    },
    {
      "type": "header",
      "content": "Width"
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 100,
      "max": 2000,
      "step": 50,
      "unit": "px",
      "label": "Maximum width",
      "default": 1200
    },
    {
      "type": "range",
      "id": "max_width_mobile",
      "min": 100,
      "max": 500,
      "step": 20,
      "unit": "px",
      "label": "Maximum width on mobile",
      "default": 300
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "spacing_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Top spacing",
      "default": 20
    },
    {
      "type": "range",
      "id": "spacing_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Bottom spacing",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "Line divider"
    }
  ]
}
{% endschema %}
