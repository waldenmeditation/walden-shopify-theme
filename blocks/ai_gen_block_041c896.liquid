{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

<style data-shopify>
  #shopify-block-{{ block.id }} {
    width: 100%;
  }

  
  .ai-product-grid-{{ ai_gen_id }} {
    display: grid;
    margin: auto;
    width:100%;
    max-width: {{ block.settings.max_width }}px;
    grid-template-columns: repeat({{ block.settings.product_count }}, minmax(0, 1fr));
    gap: {{ block.settings.grid_gap }}px;
    padding: {{ block.settings.section_padding }}px 0;
  }

  .ai-product-grid-item-{{ ai_gen_id }} {
    position: relative;
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .ai-product-grid-item-image-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    overflow: hidden;
  }

  .ai-product-grid-item-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-product-grid-item-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-product-grid-item-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-product-grid-item-content-{{ ai_gen_id }} {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    align-items: {{ block.settings.vertical_alignment }};
    justify-content: {{ block.settings.text_alignment }};
    padding: {{ block.settings.content_padding }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-product-grid-item-heading-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.heading_size }}px;
  color: var(--custom-heading-color, {{ block.settings.heading_color }});
    font-weight: {{ block.settings.heading_weight }};
    line-height: 1.3;
  }


  @media screen and (max-width: 768px) {
    .ai-product-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.mobile_columns }}, 1fr);
      gap: {{ block.settings.grid_gap | times: 0.75 }}px;
    }

    .ai-product-grid-item-image-{{ ai_gen_id }} {
      aspect-ratio: {{ block.settings.mobile_image_aspect_ratio }};
    }

    .ai-product-grid-item-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.9 }}px;
    }

    .ai-product-grid-item-content-{{ ai_gen_id }} {
      padding: {{ block.settings.content_padding | times: 0.75 }}px;
    }
  }

  {% if block.settings.product_count == 3 %}
    @media screen and (max-width: 768px) {
      .ai-product-grid-{{ ai_gen_id }} .ai-product-grid-item-{{ ai_gen_id }}:nth-child(3) {
        display: none;
      }
    }
  {% endif %}
</style>

<div class="section section--full-width">
  <div class="ai-product-grid-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
    {% for i in (1..block.settings.product_count) %}
      {% liquid
        assign product_key = 'product_' | append: i
        assign image_key = 'image_' | append: i
        assign heading_key = 'heading_' | append: i
        assign color_key = 'color_' | append: i
        assign product = block.settings[product_key]
        assign custom_image = block.settings[image_key]
        assign custom_heading = block.settings[heading_key]

        assign custom_color = block.settings[color_key]
      %}

      {% if product != blank %}
        <a href="{{ product.url }}" class="ai-product-grid-item-{{ ai_gen_id }}">
      {% else %}
        <div class="ai-product-grid-item-{{ ai_gen_id }}">
      {% endif %}
      <div class="ai-product-grid-item-image-{{ ai_gen_id }}">
        {% if custom_image != blank %}
          {{
            custom_image
            | image_url: width: 2000
            | image_tag:
              alt: custom_image.alt,
              widths: '400,600,800,1200,1600,2000',
              sizes: '(min-width: 750px) 50vw, 100vw',
              loading: 'lazy',
              class: ''
          }}
        {% elsif product != blank and product.featured_image != blank %}
          {{
            product.featured_image
            | image_url: width: 2000
            | image_tag:
              alt: product.featured_image.alt,
              widths: '400,600,800,1200,1600,2000',
              sizes: '(min-width: 750px) 50vw, 100vw',
              loading: 'lazy',
              class: ''
          }}
        {% else %}
          <div class="ai-product-grid-item-placeholder-{{ ai_gen_id }}">
            {{ 'product-apparel-1' | placeholder_svg_tag }}
          </div>
        {% endif %}

        <div class="ai-product-grid-item-content-{{ ai_gen_id }}" style="--custom-heading-color: {{ custom_color }}">
          <h3 class="ai-product-grid-item-heading-{{ ai_gen_id }}">
            {% if custom_heading != blank %}
              {{ custom_heading }}
            {% elsif product != blank %}
              {{ product.title }}
            {% else %}
              Product {{ i }}
            {% endif %}
          </h3>
        </div>
      </div>

      {% if product != blank %}
        </a>
      {% else %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>
