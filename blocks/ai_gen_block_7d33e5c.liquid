{% doc %}
  @prompt
    three-column section. all columns should have the same height (adjustable)
    
    each column should have an image background, and a text option. the text should be center aligned. the blocks themselves should be clickable links.
    
    spacing should be adjustable.
    
    on mobile, stack vertically.
    
    separate text size option for mobile, mobile minimum height should be 50
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-three-column-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.spacing }}px;
    width: 100%;
    max-width: {{ block.settings.max_width }}px;
    margin: auto;
  }

  .ai-three-column__item-{{ ai_gen_id }} {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    height: {{ block.settings.column_height }}px;
    overflow: hidden;
    text-decoration: none;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-three-column__background-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 0;
  }

  .ai-three-column__background-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 0;
  }

  .ai-three-column__background-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-three-column__overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 1;
  }

  .ai-three-column__text-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    text-align: center;
    padding: 20px;
    font-weight: {{ block.settings.text_weight }};
  }

  @media screen and (max-width: 749px) {
    .ai-three-column-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.spacing_mobile }}px;
    }

    .ai-three-column__item-{{ ai_gen_id }} {
      height: {{ block.settings.column_height_mobile }}px;
    }

    .ai-three-column__text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size_mobile }}px;
    }
  }
{% endstyle %}

<div class="ai-three-column-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% for i in (1..3) %}
    {% liquid
      assign image_key = 'column_' | append: i | append: '_image'
      assign text_key = 'column_' | append: i | append: '_text'
      assign link_key = 'column_' | append: i | append: '_link'

      assign column_image = block.settings[image_key]
      assign column_text = block.settings[text_key]
      assign column_link = block.settings[link_key]
    %}

    {% if column_link != blank %}
      <a href="{{ column_link }}" class="ai-three-column__item-{{ ai_gen_id }}">
    {% else %}
      <div class="ai-three-column__item-{{ ai_gen_id }}">
    {% endif %}

      {% if column_image %}
        <img
          src="{{ column_image | image_url: width: 1000 }}"
          alt="{{ column_image.alt | escape }}"
          loading="lazy"
          width="{{ column_image.width }}"
          height="{{ column_image.height }}"
          class="ai-three-column__background-{{ ai_gen_id }}"
        >
      {% else %}
        <div class="ai-three-column__background-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
        </div>
      {% endif %}

      <div class="ai-three-column__overlay-{{ ai_gen_id }}"></div>

      {% if column_text != blank %}
        <div class="ai-three-column__text-{{ ai_gen_id }}">
          {{ column_text }}
        </div>
      {% endif %}

    {% if column_link != blank %}
      </a>
    {% else %}
      </div>
    {% endif %}
  {% endfor %}
</div>

