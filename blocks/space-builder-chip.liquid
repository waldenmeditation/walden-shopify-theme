{% stylesheet %}
  .space-builder-chip {
    display: block;
    position: relative;
    overflow: hidden;
    border-radius: 6px;
    aspect-ratio: 16 / 5;
    padding: 1.25rem;
    text-decoration: none;
    color: #fff;
  }

  .space-builder-chip__bg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .space-builder-chip__text {
    position: relative;
    font-size: 1.1rem;
    font-weight: 400;
    line-height: 1.2;
    display: flex;
    align-items: center;
    height: 100%;
  }

  .space-builder-chip__arrow {
    width: 0.65em;
    height: 0.65em;
    filter: invert(1);
    display: inline;
    vertical-align: middle;
    margin-left: 0.15em;
  }
{% endstylesheet %}

{%- if block.settings.url != blank -%}
  <a href="{{ block.settings.url }}" class="space-builder-chip" {{ block.shopify_attributes }}>
    <img src="{{ 'Chip Background.png' | asset_url }}" alt="" class="space-builder-chip__bg" loading="lazy">
    <span class="space-builder-chip__text">Meditation<br>Space Builder <img src="{{ 'Arrow.svg' | asset_url }}" alt="" class="space-builder-chip__arrow"></span>
  </a>
{%- endif -%}

{% schema %}
{
  "name": "Space Builder Chip",
  "settings": [
    {
      "type": "url",
      "id": "url",
      "label": "Link URL"
    }
  ],
  "presets": [
    {
      "name": "Space Builder Chip"
    }
  ]
}
{% endschema %}
