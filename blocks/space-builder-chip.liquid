{% stylesheet %}
  .space-builder-chip {
    display: grid;
    place-items: center start;
    position: relative;
    overflow: hidden;
    border-radius: 6px;
    aspect-ratio: 16 / 6;
    padding: 1.25rem 1.25rem 1.25rem 1.75rem;
    text-decoration: none;
    color: #fff;
  }

  .space-builder-chip__bg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .space-builder-chip__content {
    position: relative;
  }

  .space-builder-chip__title {
    font-size: 1.35rem;
    font-weight: 400;
    line-height: 1.2;
  }

  .space-builder-chip__subtitle {
    font-size: 0.875rem;
    font-weight: 400;
    opacity: 0.85;
    margin-top: 0.5rem;
  }

  .space-builder-chip__arrow {
    width: 0.65em;
    height: 0.65em;
    filter: invert(1);
    display: inline;
    vertical-align: middle;
    margin-left: 0.15em;
  }
{% endstylesheet %}

{%- if block.settings.url != blank -%}
  <a href="{{ block.settings.url }}" class="space-builder-chip" {{ block.shopify_attributes }}>
    <img src="{{ 'Chip Background.png' | asset_url }}" alt="" class="space-builder-chip__bg" loading="lazy">
    <div class="space-builder-chip__content">
      <div class="space-builder-chip__title">Meditation<br>Space Builder <img src="{{ 'Arrow.svg' | asset_url }}" alt="" class="space-builder-chip__arrow"></div>
      {%- if block.settings.subtitle != blank -%}
        <div class="space-builder-chip__subtitle">{{ block.settings.subtitle }}</div>
      {%- endif -%}
    </div>
  </a>
{%- endif -%}

{% schema %}
{
  "name": "Space Builder Chip",
  "settings": [
    {
      "type": "url",
      "id": "url",
      "label": "Link URL"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Design your meditation space with our new tool."
    }
  ],
  "presets": [
    {
      "name": "Space Builder Chip"
    }
  ]
}
{% endschema %}
