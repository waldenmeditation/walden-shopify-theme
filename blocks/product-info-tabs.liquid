  {%- if imgs_mf and imgs_mf.value -%}
    {%- assign files_array = imgs_mf.value -%}
  {%- elsif imgs_mf and imgs_mf.files -%}
    {%- assign files_array = imgs_mf.files -%}
  {%- elsif imgs_mf and imgs_mf.size -%}
