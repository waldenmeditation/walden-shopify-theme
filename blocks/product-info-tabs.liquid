{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  /* Minimal, purpose-only styles for tabs */
  .ai-product-tabs { width: 100%; max-width: 100%; }

  .ai-product-tabs-nav {
    display: flex;
    flex-wrap: wrap;
    gap: {{ block.settings.tab_spacing }}px;
    margin-bottom: {{ block.settings.content_spacing }}px;
  }

  .ai-product-tabs-button {
    background: none;
    border: 0;
    padding: 0 0 {{ block.settings.tab_padding }}px 0;
    cursor: pointer;
    font-size: {{ block.settings.tab_font_size }}px;
    font-weight: {{ block.settings.tab_font_weight }};
    text-transform: {{ block.settings.tab_text_transform }};
    color: {{ block.settings.inactive_tab_color }};
    border-bottom: 2px solid transparent;
    transition: color 0.2s ease, border-color 0.2s ease;
  }
  .ai-product-tabs-button:hover { color: {{ block.settings.hover_tab_color }}; }
  .ai-product-tabs-button.active {
    color: {{ block.settings.active_tab_color }};
    border-bottom-color: {{ block.settings.active_underline_color }};
  }

  .ai-product-tabs-content { position: relative; }

  .ai-product-tabs-panel {
    display: none;
    color: {{ block.settings.content_text_color }};
    line-height: {{ block.settings.content_line_height }};
  }
  .ai-product-tabs-panel.active { display: block !important; }

  /* Images inside tabs */
  .ai-tab-images { line-height: 0; }
  .ai-tab-img { display: block; width: 100%; height: auto; margin: 0 !important; }

  /* Variant/specs visibility toggles */
  .ai-tab-variant-images { display: none; }
  .ai-tab-product-images { display: block; }
  .ai-specs-variant-images { display: none; }
  .ai-specs-product-images { display: block; }
{% endstyle %}

{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}



{% assign metafields = product.metafields.custom %}
{% assign specs_images = product.metafields.custom.specs_images %}
{% assign specs_variant_1 = product.metafields.custom.specs_variant_1 %}
{% assign specs_variant_1_images = product.metafields.custom.specs_variant_1_images %}
{% assign specs_variant_2 = product.metafields.custom.specs_variant_2 %}
{% assign specs_variant_2_images = product.metafields.custom.specs_variant_2_images %}
{% assign DEBUG_TABS = false %}

{% assign tab_items = "1,2,3" | split: "," %}
<div class="ai-product-tabs-nav">
  <button class="ai-product-tabs-button active" data-tab="description" aria-selected="true" role="tab">
    Description
  </button>
  {% for index in tab_items %}
    {% assign title_key = "tab_" | append: index | append: "_title" %}
    {% if metafields[title_key] and metafields[title_key].value != blank %}
      <button class="ai-product-tabs-button" data-tab="tab{{ index }}" role="tab">
        {{ metafields[title_key].value }}
      </button>
    {% endif %}
  {% endfor %}
  
</div>

<div class="ai-product-tabs-content">
  <div class="ai-product-tabs-panel active" data-panel="description" role="tabpanel">
    {% if product.description != blank %}
      {{ product.description }}
    {% else %}
      <p>No product description available.</p>
    {% endif %}
  </div>
{% for index in tab_items %}
