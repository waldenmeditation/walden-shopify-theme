    {% assign is_specs_tab = true %}
  {% endif %}

  {%- assign text_mf = metafields[content_key] -%}
  {%- assign imgs_mf = metafields[images_key] -%}

  {%- assign has_text = false -%}
  {%- if text_mf and text_mf.value != blank -%}
    {%- assign has_text = true -%}
  {%- endif -%}

  {%- comment -%} Normalize possible shapes for List of files {%- endcomment -%}
