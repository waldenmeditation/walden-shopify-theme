<script>
  document.addEventListener('DOMContentLoaded', function() {
    const tabs = document.querySelectorAll('.ai-product-tabs-button');
    const panels = document.querySelectorAll('.ai-product-tabs-panel');
    // Single source of truth for current variant; no polling

    tabs.forEach(btn => {
      btn.addEventListener('click', () => {
        const tab = btn.dataset.tab;
        // Remove active class from all tabs and panels
        tabs.forEach(b => b.classList.remove('active'));
        panels.forEach(p => p.classList.remove('active'));
        // Add active class to clicked tab and corresponding panel
        btn.classList.add('active');
        const targetPanel = document.querySelector(`.ai-product-tabs-panel[data-panel="${tab}"]`);
        if (targetPanel) {
          targetPanel.classList.add('active');
        }
      });
    });
    
    // Ensure first tab is active by default
    const firstTab = document.querySelector('.ai-product-tabs-button[data-tab="description"]');
    const firstPanel = document.querySelector('.ai-product-tabs-panel[data-panel="description"]');
    
    if (firstTab && firstPanel) {
      firstTab.classList.add('active');
      firstPanel.classList.add('active');
    }

    // ===== Variant-specific images in tabs =====
  function getSelectedVariantId() {
    // 1) Hidden/select input in the add-to-cart form
    const idInput = document.querySelector('form[action*="/cart/add"] [name="id"]');
    if (idInput && idInput.value) return String(idInput.value);
    // 2) URL query (?variant=...)
    const urlVid = new URLSearchParams(window.location.search).get('variant');
    if (urlVid) return String(urlVid);
    // 3) Common theme data attributes
    const selectedEl = document.querySelector('[data-selected-variant], [data-variant-id].is-selected, [data-variant-id].active');
    if (selectedEl) {
      const d = selectedEl.getAttribute('data-selected-variant') || selectedEl.getAttribute('data-variant-id');
      if (d) return String(d);
    }
    // 4) Fallback to server-rendered default
    return "{{ product.selected_or_first_available_variant.id }}";
  }

// Removed polling in favor of direct updates on load and tab click

    function updateTabVariantImages() {
      const currentVariantId = String(getSelectedVariantId());
      document.querySelectorAll('.ai-product-tabs-panel').forEach(panel => {
        const panelKey = panel.getAttribute('data-panel');
        if (!panelKey || !panelKey.startsWith('tab')) return;
        const tabIndex = panelKey.replace('tab', '');

        // Hide all variant blocks in this panel
        panel.querySelectorAll('.ai-tab-variant-images').forEach(el => { el.style.display = 'none'; });

        // Show blocks for the selected variant (if any)
        const matchingVariantBlocks = panel.querySelectorAll(`.ai-tab-variant-images[data-variant-id="${currentVariantId}"][data-tab="${tabIndex}"]`);
        const productBlock = panel.querySelector(`.ai-tab-product-images[data-tab="${tabIndex}"]`);
        if (matchingVariantBlocks.length > 0) {
          matchingVariantBlocks.forEach(el => { el.style.display = 'block'; });
          if (productBlock) productBlock.style.display = 'none';
        } else {
          if (productBlock) productBlock.style.display = 'block';
        }
      });

      // ===== SPECS images toggle (by tab title keywords + variant groups) =====
      document.querySelectorAll('.ai-product-tabs-panel[data-panel^="tab"]').forEach(panel => {
        const panelKey = panel.getAttribute('data-panel');
        const tabIndex = panelKey.replace('tab', '');
        const isSpecs = panel.querySelector('.ai-specs-product-images[data-tab="' + tabIndex + '"]') !== null;
        if (!isSpecs) {
          return;
        }

        const currentId = String(currentVariantId);
        const productSpecs = panel.querySelector('.ai-specs-product-images[data-tab="' + tabIndex + '"]');
        const groupBlocks = panel.querySelectorAll('.ai-specs-variant-images[data-tab="' + tabIndex + '"]');

        let shown = false;
        groupBlocks.forEach(block => {
          const list = (block.getAttribute('data-variant-ids') || '').split(',').map(s => s.trim()).filter(Boolean);
          if (list.includes(currentId)) {
            block.style.display = 'block';
            shown = true;
          } else {
            block.style.display = 'none';
          }
        });

        if (productSpecs) {
          productSpecs.style.display = shown ? 'none' : 'block';
        }
      });
    }

    // Run after default tab activates
    updateTabVariantImages();

    // Preload all tab images (small files) so switching variants is instant
    (function preloadTabImages() {
      const imgs = document.querySelectorAll('.ai-product-tabs-panel .ai-tab-img');
      imgs.forEach((img) => {
        try { img.loading = 'eager'; } catch(_) {}
        try { img.decoding = 'async'; } catch(_) {}
        const src = img.currentSrc || img.src || (img.getAttribute('srcset') || '').split(' ')[0];
        if (src) {
          const pre = new Image();
          pre.src = src;
        }
      });
    })();

    // Update images when the theme dispatches a variant update (aligns with product media behavior)
    document.addEventListener('variant:update', (e) => {
      try {
        const vid = e && e.detail && e.detail.resource && e.detail.resource.id;
        if (vid) {
          const idInput = document.querySelector('form[action*="/cart/add"] [name="id"]');
          if (idInput) idInput.value = String(vid);
        }
      } catch(_) {}
      updateTabVariantImages();
    });
  });
</script>

